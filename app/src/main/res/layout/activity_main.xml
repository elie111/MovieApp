<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp1.movieapp.MainActivity" >

    <TextView
        android:id="@+id/tvmovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="MOVIES"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6ca158"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="log in"
            android:textColor="#309227" />

        <Button
            android:id="@+id/bsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" sign in"
            android:textColor="#309227" />

        <Button
            android:id="@+id/bguest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="guest"
            android:textColor="#309227" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/btdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="0dp"
            android:text="delete"
            android:textColor="#309227" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lv"
            android:layout_width="163dp"
            android:layout_height="217dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </ListView>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/imdeadpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/deadpool"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imfist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fist"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imlastvegas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lastvegas"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imwhyhim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whyhim"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ci"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imvacation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vacation"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imthehang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/thehang"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imssm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ssm"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>